{
    "name": "Adblocker Blocker",
    "version": "1.0",
    "description": "An Adblocker popups removal",
    "host_permissions": ["*://*/"],
    "permissions": [
        "tabs",
        "scripting", "activeTab"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "images/blockerlogo16.png",
            "32": "images/blockerlogo32.png",
            "48": "images/blockerlogo48.png",
            "128": "images/blockerlogo128.png"
        }
    },
    "icons": {
        "16": "images/blockerlogo16.png",
        "32": "images/blockerlogo32.png",
        "48": "images/blockerlogo48.png",
        "128": "images/blockerlogo128.png"
    },
    "manifest_version": 3
}